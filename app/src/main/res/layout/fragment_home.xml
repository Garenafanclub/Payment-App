<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_page"
    android:scaleType="fitXY"
    android:orientation="vertical"
    tools:context=".HomeFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbarSize="0dp"
       android:scrollbars="none">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <HorizontalScrollView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:scrollbarSize="0dp"
               android:scrollbars="none">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="120dp"
                   android:orientation="horizontal"
                   android:paddingTop="15dp">

                   <LinearLayout
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_margin="1dp"
                       android:orientation="vertical">

                       <androidx.appcompat.widget.AppCompatButton
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:text="Pay"
                           android:src="@drawable/pass_ic_money_received"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="Pay"
                           android:textAlignment="center"
                           android:textColor="@android:color/white"
                           android:textSize="15sp"/>
                   </LinearLayout>

              <LinearLayout
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:layout_margin="1dp"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:layout_gravity="center"
                      android:src="@drawable/pass_sa_other_wallets"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="UPI Transfer"
                      android:textAlignment="center"
                      android:textColor="@android:color/white"
                      android:textSize="15sp"/>

              </LinearLayout>

                   <LinearLayout
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_margin="1dp"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:src="@drawable/pass_sa_gift_voucher"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="Passbook"
                           android:textAlignment="center"
                           android:textColor="@android:color/white"
                           android:textSize="15sp"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_margin="1dp"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:src="@drawable/pass_sa_cashback"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="Cashback"
                           android:textAlignment="center"
                           android:textColor="@android:color/white"
                           android:textSize="15sp"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_margin="1dp"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:src="@drawable/wallet"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="Add Money"
                           android:textAlignment="center"
                           android:textColor="@android:color/white"
                           android:textSize="15sp"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_margin="1dp"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:src="@drawable/pass_sa_food_wallet"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="Stores"
                           android:textAlignment="center"
                           android:textColor="@android:color/white"
                           android:textSize="15sp"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_margin="1dp"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:src="@drawable/pass_sa_other_wallets"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="Accept Payment"
                           android:textAlignment="center"
                           android:textColor="@android:color/white"
                           android:textSize="15sp"/>

                   </LinearLayout>

               </LinearLayout>
           </HorizontalScrollView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="120dp"
               android:background="@drawable/shape4_form"
               android:orientation="vertical">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="35dp"
                 android:layout_gravity="center"
                 android:layout_marginBottom="1dp"
                 android:background="@drawable/shape5_form"
                 android:gravity="center"
                 android:text="Watches, Sunglasses at Flat 60% cashback"
                 android:textAlignment="center"
                 android:textColor="@android:color/black"
                 android:textSize="16sp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:baselineAligned="false"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_airplay"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Movie Tickets"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_phone_android"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Mobiles"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_lightbulb_outline"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Electricity"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_phone_android"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Google Play"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:baselineAligned="false"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_phone_android"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Bills"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_store"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Gstore"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_train"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Train Tickets"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_phone_android"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Postpaid"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:baselineAligned="false"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_airplay"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="DTH"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_shopping_basket"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Toys"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_store"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Food"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_margin="1dp"
                       android:layout_weight="1"
                       android:background="@android:color/white"
                       android:gravity="center"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:src="@drawable/ic_airplay"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="More"
                           android:textColor="@android:color/black"
                           android:textAlignment="center"
                           android:textSize="15sp"/>

                   </LinearLayout>

               </LinearLayout>

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="1dp"
                  android:padding="20dp"
                  android:src="@drawable/offer_pic"/>
               
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/footer_logos"/>

           </LinearLayout>

       </RelativeLayout>
   </ScrollView>
</LinearLayout>